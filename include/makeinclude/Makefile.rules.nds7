###########
# DS ARM7 #
###########
CROSS_COMPILE	=arm-elf-
CFLAGS		=-g -O2 -mcpu=arm7tdmi -mtune=arm7tdmi -fomit-frame-pointer -ffast-math -mthumb-interwork -DARM7
CXXFLAGS	=$(CFLAGS)
LFLAGS		=-mthumb-interwork

INCLUDES	+= \
		  -ID:/dev/env/libnds/include \

# Create .elf file from MY_OBJS + MY_LIBS
$(MY_ELF): $(MY_OBJS) $(MY_LIBS)
	@echo [CC ] $@
	$(CXX) $(LFLAGS) -specs=ds_arm7.specs $^ -L$(DEVKITPRO)/libnds/lib -lnds7 -o $@
